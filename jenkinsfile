pipeline {
    agent any
    stages {
        stage("Git clone") {
            steps {
                git url: 'https://github.com/inspiringrai/CAR_RENTAL.git', branch: 'main'
                credentialsId: 'ansible'
            }
        }
        stage("Frontend prerequisite installations") {
            steps{
                dir('Client'){
                    sh 'npm install'
                }
            }
        }

        stage('Maven Build'){
            steps {
                dir('Server'){

                    sh 'mvn clean install'

                }
            }
        }
        stage('Building the images of front end and back end'){
            steps {
            script{
                dir('Client'){
                    frontEndImage = docker.build patelparth17/react + ":latest"
                }
                dir('Server'){
                    backEndImage = docker.build patelparth17/spring + ":latest"
                }
            }
            }
        }

        stage('Pushing the built images to docker hub'){
            steps{
            script{
                dir('Client'){
                    docker.withRegistry( '', 'dockerid' ) {
                    frontEndImage.push()
                    }
                }
                dir('Server'){
                    docker.withRegistry( '', 'dockerid' ) {
                    backEndImage.push()
                    }
                }
            }
            }
        }

        stage('Ansible Deploy') {
             steps {
                  ansiblePlaybook colorized: true, disableHostKeyChecking: true, installation: 'Ansible', inventory: 'inventory', playbook: 'play.yml'
             }
        }
    }
}